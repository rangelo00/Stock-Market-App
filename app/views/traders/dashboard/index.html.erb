<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Trader Dashboard</h1>
    <div class="text-lg">
      Balance: <span class="font-bold text-green-600"><%= number_to_currency(current_trader.balance) %></span>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Portfolio Summary -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Portfolio Summary</h2>
      <p class="text-2xl font-bold text-green-600">
        Total Value: <%= number_to_currency(@portfolio_value) %>
      </p>
      <%= link_to "View Full Portfolio", traders_portfolios_path, class: "mt-4 inline-block text-blue-600 hover:underline" %>
    </div>
   
    <!-- Recent Transactions -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Recent Transactions</h2>
      <% if @recent_transactions.any? %>
        <% @recent_transactions.each do |transaction| %>
          <div class="mb-3 pb-2 border-b">
            <div class="flex justify-between items-center">
              <%= link_to traders_stock_path(transaction.stock), class: "hover:text-blue-600" do %>
                <span class="font-medium"><%= transaction.stock.symbol %></span>
              <% end %>
              <span class="<%= transaction.transaction_type == 'buy' ? 'text-green-600' : 'text-red-600' %>">
                <%= transaction.transaction_type.upcase %>
              </span>
            </div>
            <div class="text-sm text-gray-600">
              <%= pluralize(transaction.quantity, 'share') %> @ <%= number_to_currency(transaction.price) %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">No recent transactions</p>
      <% end %>
      <%= link_to "View All Transactions", traders_transactions_path, class: "mt-2 inline-block text-blue-600 hover:underline" %>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
      <div class="space-y-4">
        <%= link_to traders_stocks_path, class: "block w-full text-center py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700" do %>
          <i class="fas fa-search mr-2"></i> Search Stocks
        <% end %>
        
        <% if @recent_stocks&.any? %>
          <div class="mt-4">
            <h3 class="text-sm font-semibold text-gray-600 mb-2">Recently Viewed Stocks</h3>
            <div class="space-y-2">
              <% @recent_stocks.each do |stock| %>
                <%= link_to traders_stock_path(stock), class: "flex items-center justify-between p-2 hover:bg-gray-50 rounded" do %>
                  <span class="font-medium"><%= stock.symbol %></span>
                  <span class="text-sm text-gray-600"><%= number_to_currency(stock.current_price) %></span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stock Search -->
  <div class="mt-8 bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-semibold mb-4">Search & Trade Stocks</h2>
    <div class="relative">
      <%= form_tag traders_stocks_path, method: :get, class: "flex gap-4" do %>
        <div class="flex-1 relative">
          <%= text_field_tag :q, params[:q],
              class: "w-full p-2 border rounded",
              placeholder: "Search stock symbol (e.g., AAPL, MSFT)",
              autocomplete: "off" %>
        </div>
        <%= submit_tag "Search", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <% end %>
    </div>
    <%= button_to "Sign Out", destroy_trader_session_path, method: :delete %>

    <% if @stock_data %>
      <div class="mt-4 p-4 bg-gray-50 rounded">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="text-lg font-bold"><%= @stock_data[:symbol] %></h3>
            <p class="text-gray-600">Current Price: <%= number_to_currency(@stock_data[:price]) %></p>
          </div>
          <%= link_to "Trade Now", traders_stock_path(@stock), 
              class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>