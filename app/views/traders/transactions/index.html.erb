<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Transaction History</h1>
    <%= link_to "â† Back to Dashboard", traders_dashboard_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @transactions.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @transactions.each do |transaction| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to transaction.stock.symbol, traders_stock_path(transaction.stock), class: "hover:text-blue-600" %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if transaction.transaction_type.present? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    <%= transaction.buy? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= transaction.transaction_type.upcase %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= transaction.quantity %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= number_to_currency(transaction.price) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= number_to_currency(transaction.total_amount) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-6 text-center text-gray-500">
        <p>No transactions yet.</p>
      </div>
    <% end %>
  </div>
</div>