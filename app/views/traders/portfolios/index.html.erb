<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Portfolio</h1>
  
  <div class="bg-white p-6 rounded-lg shadow mb-6">
    <h2 class="text-xl font-semibold mb-2">Total Portfolio Value</h2>
    <p class="text-3xl font-bold text-green-600"><%= number_to_currency(@total_value) %></p>
  </div>
  
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shares</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Price</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Value</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @portfolios.each do |portfolio| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to traders_stock_path(portfolio.stock), class: "text-blue-600 hover:underline" do %>
                <div class="font-medium"><%= portfolio.stock.symbol %></div>
                <div class="text-sm text-gray-500"><%= portfolio.stock.name %></div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap"><%= portfolio.quantity %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= number_to_currency(portfolio.stock.current_price) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap font-medium">
              <%= number_to_currency(portfolio.current_value) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "Trade", traders_stock_path(portfolio.stock), 
                  class: "text-blue-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>