<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6 flex justify-between items-center">
      <h1 class="text-2xl font-bold">Edit Transaction</h1>
      <%= link_to "â† Back to Dashboard", admin_dashboard_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <%= form_with(model: [:admin, @transaction], local: true, method: :patch) do |f| %>
        <% if @transaction.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @transaction.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-6">
          <div class="flex flex-col">
            <div class="mb-4">
              <p class="text-sm font-medium text-gray-700 mb-1">Trader</p>
              <p class="text-gray-900"><%= @transaction.trader.email %></p>
            </div>

            <div class="mb-4">
              <p class="text-sm font-medium text-gray-700 mb-1">Stock</p>
              <p class="text-gray-900"><%= @transaction.stock.symbol %></p>
            </div>

            <div class="mb-4">
              <%= f.label :transaction_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :transaction_type, 
                          options_for_select([['Buy', 'buy'], ['Sell', 'sell']], @transaction.transaction_type),
                          {},
                          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
            </div>

            <div class="mb-4">
              <%= f.label :quantity, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.number_field :quantity, 
                               step: 1,
                               min: 1,
                               class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="mb-4">
               <p class="text-sm font-medium text-gray-700 mb-1">Price per Share</p>
               <p class="text-gray-900">$<%= number_with_precision(@transaction.price, precision: 2) %></p>
               <%= f.hidden_field :price, value: @transaction.price %>
            </div>

            <div class="mb-6">
               <p class="text-sm font-medium text-gray-700 mb-1">Total Price</p>
               <p class="text-gray-900" id="total-price">
                  $<%= number_with_precision(@transaction.price * @transaction.quantity, precision: 2) %>
               </p>
            </div>

            <div class="flex justify-between items-center">
              <%= f.submit "Update Transaction",
                          class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        </div>
      <% end %>
      <div>
        <%= button_to "Delete Transaction",
                      admin_transaction_path(@transaction),
                      method: :delete,
                      data: { confirm: "Are you sure? This action cannot be undone." },
      class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>

        <% content_for :javascript do %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const quantityField = document.querySelector('input[name="transaction[quantity]"]');
      const pricePerShare = <%= @transaction.price %>;
      const totalPriceDisplay = document.getElementById('total-price');

      if (quantityField && totalPriceDisplay) {
        quantityField.addEventListener('input', function() {
          const quantity = this.value;
          const totalPrice = (quantity * pricePerShare).toFixed(2);
          totalPriceDisplay.textContent = `$${totalPrice}`;
        });
      }
    });
  </script>
<% end %>
      </div>
    </div>
  </div>
</div>