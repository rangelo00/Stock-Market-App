<div class="container mx-auto px-4 py-8">
<div class="container mx-auto px-4 py-8">
<div class="mb-8">
  <h2 class="text-xl font-bold mb-4">Pending Registrations</h2>
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @pending_traders.each do |trader| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= trader.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.created_at.strftime("%B %d, %Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= button_to "Approve",
                          approve_admin_trader_path(trader),
                          method: :patch,
                          class: "inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 mr-2" %>
                          
              <%= button_to "Reject",
                          reject_admin_trader_path(trader),
                          method: :patch,
                          data: { confirm: "Are you sure you want to reject this trader?" },
                          class: "inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

</div>
  <div class="mb-6">
    <h1 class="text-2xl font-bold">Registered Traders</h1>
    <p class="text-gray-600">Total traders: <%= @traders.count %></p>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Portfolio Count</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction Count</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @traders.each do |trader| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= trader.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.created_at.strftime("%B %d, %Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.portfolios.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.transactions.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View Details", admin_trader_path(trader), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>