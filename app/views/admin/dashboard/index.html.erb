<div class="container mx-auto px-4 py-8">
  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-gray-500 text-sm font-medium">Total Traders</h3>
      <p class="text-2xl font-bold"><%= @total_traders %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-gray-500 text-sm font-medium">Total Transactions</h3>
      <p class="text-2xl font-bold"><%= @total_transactions %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-gray-500 text-sm font-medium">Total Trading Volume</h3>
      <p class="text-2xl font-bold">$<%= number_with_precision(@total_trading_volume, precision: 2, delimiter: ',') %></p>
    </div>
  </div>

  <!-- Recent Traders Section -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-xl font-semibold">Recent Traders</h2>
      <%= link_to "View All Traders", admin_traders_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
    
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Portfolio Count</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction Count</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_traders.each do |trader| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= trader.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.created_at.strftime("%B %d, %Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.portfolios.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= trader.transactions.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View Details", admin_trader_path(trader), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= button_to "Remove", admin_trader_path(trader), method: :delete,
              data: {turbo_confirm: "R u sure? No money if u sure",
              turbo_method: :delete },
              class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Recent Transactions Section -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-xl font-semibold">Recent Transactions</h2>
      <%= link_to "View All Transactions", admin_transactions_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
    
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trader</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_transactions.each do |transaction| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= transaction.trader.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= transaction.stock.symbol %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="<%= transaction.transaction_type == 'buy' ? 'text-green-600' : 'text-red-600' %>">
                <%= transaction.transaction_type.upcase %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
              <%= transaction.quantity %> @ $<%= number_with_precision(transaction.price, precision: 2) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                 <%= link_to "Edit", edit_admin_transaction_path(transaction), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
